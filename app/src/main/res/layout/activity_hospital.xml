<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="codebros.areyouat.com.lifeline.HospitalActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="@color/colorBackgroundForSource">

    <View
        android:background="@drawable/hospital_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/view3" />

    <Button
        android:id="@+id/login_guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbob"
        android:text="@string/find_bloodgroup"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#e4d8d8"
        android:textSize="10sp"
        android:textStyle="bold"
        android:onClick="loginAsHospital"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_barcode_activity"
        android:background="@drawable/buttonbob"
        android:text="@string/add_database"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#e4d8d8"
        android:textSize="10sp"
        android:textStyle="bold"
        android:onClick="openBarcodeActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
